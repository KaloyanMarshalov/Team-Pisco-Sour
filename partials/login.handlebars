<form class="form-horizontal" action="#/items">
    <fieldset>
        <legend>Log In/Register</legend>
        <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">Name</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="login-name" placeholder="Name" required="required">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPrice" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="login-password" placeholder="Password" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <a href="#/items" class="btn btn-primary" id="login-button">Log In</a>
                <a href="#/items" class="btn btn-primary" id="register-button">Register</a>
            </div>
        </div>
    </fieldset>
</form>